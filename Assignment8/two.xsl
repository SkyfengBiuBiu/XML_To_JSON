<?xml version="1.0"?><xsl:stylesheet version="1.0"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">	<xsl:output method="text" />	<xsl:template match="/">		{		"customers":{		"customer":[		<xsl:for-each select="//customer">			<xsl:variable name="movie_count"				select="count(./rented_movies/rented_movie)" />			<xsl:if test="not($movie_count)">				{				"name" :"				<xsl:value-of select="./name" />				",				"id":"				<xsl:value-of select="./@id" />				",				"phone" : "				<xsl:value-of select="./phone" />				"				}				<xsl:if test="following-sibling::*">					,				</xsl:if>			</xsl:if>		</xsl:for-each>		]		}}	</xsl:template></xsl:stylesheet>